  "description": "Functionality to copy various parts of Jira issue to clipboard",
  "icons": {
    "48": "icons/48.png"
  },

  "applications": {
    "gecko": {
      "id": "ac196ed04ffd4ed890887c2ad743de76@mozilla.org",
      "strict_min_version": "45.0"
    }
  },
  
  "permissions": ["contextMenus", "clipboardWrite", "activeTab"],

  "background": {
    "scripts": ["background.js"]
  }

}